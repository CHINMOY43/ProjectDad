<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>myServlets.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCheckCredential</servlet-name>
        <servlet-class>myServlets.ServletCheckCredential</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEditDetails</servlet-name>
        <servlet-class>myServlets.ServletEditDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCheckCredential</servlet-name>
        <url-pattern>/ServletCheckCredential</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEditDetails</servlet-name>
        <url-pattern>/ServletEditDetails</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
